from matplotlib.animation import FuncAnimation
import matplotlib.pyplot as plt 
import numpy as np 

def cycloid(R=5):
    t = np.arange(-2*np.pi, 2*np.pi, 0.1)

    x = R*(t - np.sin(t))
    y = R*(1 - np.cos(t))

    plt.plot(x, y, ls='--', lw=3)
    plt.axis('equal')
    plt.savefig('task1_1.png')

if __name__ == '__main__':
    cycloid()    